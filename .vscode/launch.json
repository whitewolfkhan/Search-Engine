{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Server-Side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "Ready on http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      },
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    },
    {
      "name": "Next.js: Debug Client-Side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 2
      }
    },
    {
      "name": "Next.js: Debug Full Stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "Ready on http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      },
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 1
      },
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Next.js: Build and Debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run build && npm run start",
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 2
      }
    }
  ],
  "compounds": [
    {
      "name": "Next.js: Debug All",
      "configurations": [
        "Next.js: Debug Server-Side",
        "Next.js: Debug Client-Side"
      ],
      "presentation": {
        "hidden": false,
        "group": "3",
        "order": 1
      },
      "stopAll": true
    }
  ]
}